{
    "name": "@plurid/performer",
    "version": "0.0.0",
    "description": "Cloud-Native Continuous Integration/Continuous Delivery Build Pipeline",
    "keywords": [
        "performer"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/performer"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/performer/issues"
    },
    "homepage": "https://github.com/plurid/performer/blob/master/packages/performer/README.md",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "main": "distribution/index.js",
    "module": "distribution/index.es.js",
    "typings": "distribution/types/index.d.ts",
    "files": [
        "distribution"
    ],
    "preferGlobal": true,
    "scripts": {
        "start": "rollup -c rollup.config.ts -w",
        "build.removeSpecs": "rm -rf `find ./distribution/ -type d -name __specs__`",
        "build.development": "rollup -c rollup.config.ts && yarn build.removeSpecs",
        "build.production": "ENV_MODE=local rollup -c rollup.config.ts && yarn build.removeSpecs",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "graphql": "^15.3.0",
        "graphql-tag": "^2.10.4",
        "js-yaml": "^3.14.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^13.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.1.0",
        "@rollup/plugin-replace": "^2.3.3",
        "@types/js-yaml": "^3.12.5",
        "@types/node": "^14.0.22",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "eslint": "^7.4.0",
        "jest": "^26.1.0",
        "jest-config": "^26.1.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.21.0",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-peer-deps-external": "^2.2.3",
        "rollup-plugin-sourcemaps": "^0.6.2",
        "rollup-plugin-typescript2": "^0.27.1",
        "ts-jest": "^26.1.1",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6"
    }
}
