{
    "name": "@plurid/performer-cli",
    "version": "0.0.0",
    "description": "Command-Line Interface for Performr",
    "keywords": [
        "performer",
        "cli"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/performer"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/performer/issues"
    },
    "homepage": "https://github.com/plurid/performer/blob/master/packages/performer-cli/README.md",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "main": "distribution/index.js",
    "module": "distribution/index.es.js",
    "typings": "distribution/index.d.ts",
    "bin": {
        "performer": "binder/performer"
    },
    "files": [
        "distribution",
        "binder"
    ],
    "preferGlobal": true,
    "scripts": {
        "test": "jest -c ./configurations/jest.config.js --coverage ./source",
        "start": "rollup -c ./scripts/rollup.config.ts -w",
        "build.removeTests": "rm -rf `find ./distribution/ -type d -name __tests__`",
        "build.development": "rollup -c ./scripts/rollup.config.ts && yarn build.removeTests",
        "build": "rollup -c ./scripts/rollup.config.ts && yarn build.removeTests",
        "prebuild": "rm -rf distribution",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@apollo/client": "^3.1.5",
        "@plurid/deon": "^0.0.3",
        "commander": "^6.1.0",
        "cross-fetch": "^3.0.6",
        "graphql": "^15.3.0",
        "js-yaml": "^3.14.0",
        "subscriptions-transport-ws": "^0.9.18"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^15.0.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@types/js-yaml": "^3.12.5",
        "@types/node": "^14.6.4",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.1",
        "eslint": "^7.8.1",
        "jest": "^26.4.2",
        "jest-config": "^26.4.2",
        "replace-in-file": "^6.1.0",
        "rollup": "^2.26.10",
        "rollup-plugin-typescript2": "^0.27.2",
        "ts-jest": "^26.3.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    }
}
